{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tables list</h1>

    <table class="tables_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Year</th>
                <th>Manufacturer</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="{{ cycle(['odd', 'even'], loop.index0) }}">
                <td><a href="{{ path('tables_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.year }}</td>
                <td>{{ manufacturers[ entity.manufacturer ] }}</td>
                <td>
                        <a href="{{ path('tables_show', { 'id': entity.id }) }}">show</a>
                </td>
                <td>
                        <a href="{{ path('tables_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tables_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
